<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="0dp"
    android:background="@drawable/bike_card_bg"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="5dp">

        <TextView
            android:id="@+id/bikeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Bike Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/bikeAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Available"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_weight="1"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/bikeImage"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/trek_fx2_disc"
            android:padding="18dp"
            android:background="@color/white"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="5dp">


        <TextView
            android:id="@+id/bikePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LKR 1000 per 1h"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/bikeType"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Mountain Bike"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="1"/>


    </LinearLayout>



<!--    <androidx.appcompat.widget.AppCompatRatingBar-->
<!--        android:id="@+id/bikeRating"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:padding="0dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="match_parent"-->
<!--        android:clickable="false"-->
<!--        android:numStars="5" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">


        <TextView
            android:id="@+id/bikeLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maharagama"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:drawableStart="@drawable/location"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBikeRent"

            android:text="Rent"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:layout_weight="3"/>


    </LinearLayout>

</LinearLayout>